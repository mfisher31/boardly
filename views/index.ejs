<%- include('partials/header.ejs') %>

<div>
	<h2>Board Games</h2>
    
    <% if (games.length === 0) { %>
        <p>No games found. <a href="/add-game">Add your first game!</a></p>
    <% } else { %>
        <table border="1" cellpadding="10">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% games.forEach((game) => { %>
                    <tr>
                        <td><%= game.name %></td>
                        <td>
                            <a href="/edit-game/<%= game.id %>">Edit</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>
</div>

<a href="/add-game">Add Game</a>

