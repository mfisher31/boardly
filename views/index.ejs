<%- include('partials/header.ejs') %>

<h2>Board Games</h2>

<% if (games.length === 0) { %>
	<p>No games found. <a href="/add-game">Add your first game!</a></p>
<% } else { %>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Last Played</th>
				<th style="width: 1%;">Actions</th>
			</tr>
		</thead>
		<tbody>
			<% games.forEach((game) => { %>
				<tr>
					<td><%= game.name %></td>
					<td><%= game.last_played_date ? new Date(game.last_played_date).toLocaleDateString() : '-' %></td>
					<td class="text-nowrap">
						<a href="/edit-game/<%= game.id %>" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/add-game-session/<%= game.id %>" class="btn btn-sm btn-success">Play</a>
                    </td>
				</tr>
			<% }); %>
		</tbody>
	</table>
<% } %>

<div class="text-end">
	<a href="/add-game" class="btn btn-success">Add Game</a>
</div>

<%- include ('partials/footer.ejs') %>
