<%- include('partials/header.ejs') %>

<h2>Board Games</h2>

<% if (games.length === 0) { %>
	<p>No games found. <a href="/add-game">Add your first game!</a></p>
<% } else { %>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% games.forEach((game) => { %>
				<tr>
					<td><%= game.name %></td>
					<td>
						<a href="/edit-game/<%= game.id %>" class="btn btn-sm btn-primary">Edit</a>
					</td>
				</tr>
			<% }); %>
		</tbody>
	</table>
<% } %>

<a href="/add-game" class="btn btn-success">Add Game</a>

<%- include ('partials/footer.ejs') %>
